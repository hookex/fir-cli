{
  "name": "fir-cli",
  "version": "1.0.2",
  "description": "Personal CLI tools collection with AI-powered Git commit messages",
  "type": "module",
  "main": "./dist/cli.js",
  "bin": {
    "fir": "./dist/cli.js"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc",
    "start": "node --no-deprecation ./dist/index.js",
    "dev": "ts-node --no-deprecation src/index.ts",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "publish:local": "npm run build && npm uninstall -g fir-cli && npm install -g --force",
    "publish:npm": "npm version patch && npm publish && git push --follow-tags"
  },
  "keywords": [
    "cli",
    "git",
    "ai",
    "productivity",
    "tools",
    "typescript"
  ],
  "author": "hooke",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hooke/fir-cli.git"
  },
  "bugs": {
    "url": "https://github.com/hooke/fir-cli/issues"
  },
  "homepage": "https://github.com/hooke/fir-cli#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "dayjs": "^1.11.10",
    "figlet": "^1.7.0",
    "inquirer": "^9.2.12",
    "node-fetch": "^3.3.2",
    "open": "^10.0.3",
    "openai": "^4.24.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.6",
    "@types/yargs": "^17.0.32",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
