{
  "name": "personal-cli",
  "version": "1.0.0",
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-run src/cli.ts",
    "build": "deno compile --allow-read --allow-write --allow-run src/cli.ts",
    "test": "deno test"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"]
  },
  "fmt": {
    "files": {
      "include": ["src/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
